<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="synccustomer">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to perform Action for selected customers?</message>
                        <title translate="true">Sync with API</title>
                    </confirm>
                    <url path="customersync/Tfscommerce/syncapi"/> <!-- your custom controller to handle request -->
                    <type>synccustomer</type>
                    <label translate="true">Sync with API</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>